{{> navbar }}

<div class="container">
	<div class="page-header" id="entname">
      <h3>{{searchword}}</h3>
    </div>

    <table class="table table-hover">
    	<thead>
    		<tr>
    			<th>标题</th>
    			<th>摘要</th>
				<th>信源</th>    		
    			<th>域名</th>	
    			<th>排名</th>
    			<th>打分</th>
    			<th>正文</th>
    		</tr>
    	</thead>
		<tbody>
			{{#each results}}
			<tr>
				<th><a href="{{url}}">{{title}}</a></th>
				<th>{{brief}}</th>
				<th><a href="{{sourceurl}}">{{sourceurl}}</a></th>
				<th>{{domain}}</th>
				<th>{{rank}}</th>
				<th>{{score}}</th>
				<th>
					<button class="btn btn-default viewcontent" data-content="{{content}}">查看</button>
				</th>
			</tr>
			{{/each}}
		</tbody>
    </table>
    <nav>
	  <ul class="pagination">
	  	{{#compare curpage 0 operator="=="}}
	  	<li class="disabled">
	      <a href="#" aria-label="Previous">
	        <span aria-hidden="true">&laquo;</span>
	      </a>
	    </li>
	  	{{else}}
	   	<li>
	      <a href="?searchword={{searchword}}&offset={{calculate curpage 1 "-"}}" aria-label="Previous">
	        <span aria-hidden="true">&laquo;</span>
	      </a>
	    </li>
	    {{/compare}}
	    {{!-- {{calculate results.count 10}} --}}
	    <li class="active"><a href="?searchword={{searchword}}&offset={{curpage}}">{{calculate curpage 1 "+"}}</a></li>
	    <li><a href="?searchword={{searchword}}&offset={{calculate curpage 1 "+"}}">{{calculate curpage 2 "+"}}</a></li>
	    <li><a href="?searchword={{searchword}}&offset={{calculate curpage 2 "+"}}">{{calculate curpage 3 "+"}}</a></li>
	    <li><a href="?searchword={{searchword}}&offset={{calculate curpage 3 "+"}}">{{calculate curpage 4 "+"}}</a></li>
	    <li><a href="?searchword={{searchword}}&offset={{calculate curpage 4 "+"}}">{{calculate curpage 5 "+"}}</a></li>
	    <li>
	      <a href="?searchword={{searchword}}&offset={{calculate curpage 1 "+"}}" aria-label="Next">
	        <span aria-hidden="true">&raquo;</span>
	      </a>
	    </li>
	  </ul>
	</nav>

	 <!-- Modal -->
  	<div class="modal fade" id="contentmodal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
	    <div class="modal-dialog">
	      <div class="modal-content">
	        <div class="modal-header">
	          <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
	          <h4 class="modal-title" id="myModalLabel">正文内容</h4>
	        </div>
	        <div class="modal-body">
	          {{!-- <div class="form-group">
	            <label for="inputPassword" class="col-sm-2 control-label">分析深度</label>
	            <div class="col-sm-10">
	              <input type="text" class="form-control" id="inputdeep" placeholder="3">
	            </div>
	          </div> --}}
	        </div>
	        <div class="modal-footer">
	          <button type="button" class="btn btn-default" data-dismiss="modal">关闭</button>
	          <button type="button" class="btn btn-primary" id="beginload-btn">开始</button>
	        </div>
	      </div>
	    </div>
	  </div>
</div>

<script src="/js/searchdoc.js"></script>