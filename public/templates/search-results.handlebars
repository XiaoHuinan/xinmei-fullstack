{{#unless result}}
<table class="table table-hover">
  <thead>
    <tr>
      <th>#</th>
      <th>lcid</th>
      <th>公司名</th>
      <th>有无企+数据</th>
      <th>操作</th>
      <th>搜索数据</th>
      <th>下载文章数据</th>
    </tr>
  </thead>
  <tbody>
  	{{#each data}}
    <tr>
      <td scope="row">{{@index}}</td>
      <td>{{this.lcid}}</td>
      <td>{{this.fei_entname}}</td>
      <td>
        {{#if this.status}}
        <p class="text-success">有数据</p>
        {{else}}
        <p class="text-danger">无数据</p>
        {{/if}}
      </td>
      <td>
        {{#if this.status}}
          {{!-- <button type="button" class="btn btn-default disabled" data-enterprise="{{this.fei_entname}}" data-lcid="{{this.lcid}}" data-status = "{{this.status}}" data-toggle="modal" data-target="#qydatamodal">企+数据</button> --}}
        	<a class="btn btn-default" href="/enterprise/{{lcid}}/enterprisetree" role="button">查看树状图</a>     	
        	<a class="btn btn-default" href="/enterprise/{{lcid}}/industrychart" role="button">查看行业结构图</a>
          <button class="btn btn-default" id="entrefresh-btn" data-lcid = "{{lcid}}" role="button">更新数据</button>
        {{else}}
          <button type="button" class="btn btn-default loaddata-btn" data-enterprise="{{this.fei_entname}}" data-lcid="{{this.lcid}}" data-status = "{{this.status}}" data-toggle="modal" data-target="#qydatamodal">企+数据</button>

        {{/if}}
      </td>
      <td>
        <a href="/searchdoc/{{this.lcid}}">{{this.count}}</a>
      </td>
      <td>
        <button type="button" class="btn btn-default loaddocs-btn" data-enterprise="{{this.fei_entname}}" data-lcid="{{this.lcid}}" data-status = "{{this.status}}" data-toggle="modal" data-target="#articledatamodal">搜索文章</button>
      </td>
    </tr>
    {{/each}}
  </tbody>
</table>
{{else}}
    <p>{{meta.message}}</p>
{{/unless}}